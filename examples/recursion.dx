' Factorial

interface RecursiveFactorial a b
    recurExtr : a->b
    -- recurFact : a->a

instance RecursiveFactorial (a&Unit) a -- base case
    recurExtr = fst
    -- recurFact = id

instance [RecursiveFactorial a Int] RecursiveFactorial (Int&a) Int
    recurExtr = \(x, xs). x * (recurExtr xs)
    -- recurFact = \(x, xs). x * recurFact xs

recurExtr (1,())

:t (1,())

(1,2,3)
(_,x) = (1,2,3)
x

